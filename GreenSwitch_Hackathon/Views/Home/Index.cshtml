@{
    ViewData["Title"] = "GreenSwitch - Sustainable Mauritius";
}

<!-- Hero Section -->
<section class="hero-section bg-success text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">GreenSwitch Mauritius</h1>
                <p class="lead mb-4">Connecting Sustainable Infrastructure (SDG 9) with Ocean Protection (SDG 14) through Climate Action (SDG 13)</p>
                <p class="mb-4">AI-powered platform connecting Mauritian businesses with verified sustainable suppliers</p>
                <div class="d-flex flex-wrap gap-3">
                    <a href="/Home/Chat" class="btn btn-light btn-lg px-4 py-2">
                        <i class="fas fa-robot me-2"></i>Start AI Chat
                    </a>
                    <a href="#how-it-works" class="btn btn-outline-light btn-lg px-4 py-2">
                        <i class="fas fa-play-circle me-2"></i>How It Works
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- SDG Impact Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Triple SDG Impact</h2>
            <p class="text-muted">Driving sustainable development across three key goals</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm sdg-card sdg-9-card">
                    <div class="card-body text-center p-4">
                        <div class="sdg-icon mb-3">
                            <i class="fas fa-industry fa-3x"></i>
                        </div>
                        <h4 class="fw-bold">SDG 9</h4>
                        <h5 class="text-warning mb-3">Industry, Innovation & Infrastructure</h5>
                        <p class="text-muted">Connecting businesses with sustainable infrastructure suppliers, renewable energy solutions, and green innovators across Mauritius.</p>
                        <ul class="text-start mt-3">
                            <li>Sustainable suppliers</li>
                            <li>Green technology</li>
                            <li>Renewable energy</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm sdg-card sdg-13-card">
                    <div class="card-body text-center p-4">
                        <div class="sdg-icon mb-3">
                            <i class="fas fa-fire fa-3x"></i>
                        </div>
                        <h4 class="fw-bold">SDG 13</h4>
                        <h5 class="text-danger mb-3">Climate Action</h5>
                        <p class="text-muted">Empowering Mauritian businesses to take climate action through carbon reduction strategies and sustainable practices.</p>
                        <ul class="text-start mt-3">
                            <li>Carbon reduction</li>
                            <li>Climate resilience</li>
                            <li>Sustainable practices</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm sdg-card sdg-14-card">
                    <div class="card-body text-center p-4">
                        <div class="sdg-icon mb-3">
                            <i class="fas fa-water fa-3x"></i>
                        </div>
                        <h4 class="fw-bold">SDG 14</h4>
                        <h5 class="text-primary mb-3">Life Below Water</h5>
                        <p class="text-muted">Protecting Mauritius' beautiful coastlines and marine ecosystems through ocean-friendly business solutions.</p>
                        <ul class="text-start mt-3">
                            <li>Plastic reduction</li>
                            <li>Coastal protection</li>
                            <li>Marine conservation</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works -->
<section id="how-it-works" class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">How GreenSwitch Works</h2>
            <p class="text-muted">Three simple steps to sustainable business transformation</p>
        </div>
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="text-center">
                    <div class="step-icon mb-3">
                        <i class="fas fa-comment-dots fa-2x text-success"></i>
                    </div>
                    <h4>Ask Our AI</h4>
                    <p>Chat with our sustainability AI assistant about your business needs - solar energy, eco-packaging, waste management, or SDG guidance.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="text-center">
                    <div class="step-icon mb-3">
                        <i class="fas fa-search fa-2x text-success"></i>
                    </div>
                    <h4>Get Matched</h4>
                    <p>Our AI searches through verified Mauritian sustainable suppliers and provides personalized recommendations with SDG impact analysis.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="text-center">
                    <div class="step-icon mb-3">
                        <i class="fas fa-handshake fa-2x text-success"></i>
                    </div>
                    <h4>Connect & Grow</h4>
                    <p>Connect with trusted suppliers, implement sustainable practices, and track your environmental impact through our platform.</p>
                </div>
            </div>
        </div>
    </div>
</section>

