@{
    ViewData["Title"] = "AI Sustainability Assistant";
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>GreenSwitch AI Assistant</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
  <style>
    :root {
      --bg: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      --user-bg: #2E7D32;
      --ai-bg: #f1f3f5;
      --text-user: #ffffff;
      --text-ai: #1a1a1a;
      --input-bg: rgba(255, 255, 255, 0.85);
      --border: #e0e0e0;
      --shadow: 0 8px 32px rgba(0,0,0,0.08);
      --radius: 18px;
      --green: #2E7D32;
    }
    [data-theme="dark"] {
      --bg: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 100%);
      --user-bg: #2E7D32;
      --ai-bg: #2d3748;
      --text-user: #ffffff;
      --text-ai: #e2e8f0;
      --input-bg: rgba(15, 15, 35, 0.9);
      --border: #334155;
      --shadow: 0 8px 32px rgba(0,0,0,0.3);
      --green: #2E7D32;
    }
    * { margin:0; padding:0; box-sizing:border-box; }
    body {
      font-family: 'Segoe UI', system-ui, sans-serif;
      background: var(--bg);
      height: 100vh;
      display: flex;
      flex-direction: column;
      color: var(--text-ai);
      transition: background 0.4s ease;
    }
    /* Header */
    header {
      background: rgba(255,255,255,0.1);
      backdrop-filter: blur(12px);
      border-bottom: 1px solid var(--border);
      padding: 1rem;
      text-align: center;
      font-weight: 600;
      font-size: 1.1rem;
      color: var(--text-ai);
      position: relative;
    }
    .theme-toggle {
      position: absolute; right: 1rem; top: 50%;
      transform: translateY(-50%);
      background: none; border: none; font-size: 1.3rem;
      cursor: pointer; color: var(--text-ai);
      opacity: 0.7;
    }
    .theme-toggle:hover { opacity: 1; }
    /* Chat Area */
    #chat {
      flex: 1;
      overflow-y: auto;
      padding: 1.5rem 1rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    .msg {
      max-width: 78%;
      padding: 0.9rem 1.2rem;
      border-radius: var(--radius);
      position: relative;
      animation: fadeIn 0.3s ease-out;
      box-shadow: var(--shadow);
      display: flex;
      align-items: flex-start;
      gap: 0.7rem;
      word-wrap: break-word;
    }
    .user { align-self: flex-end; background: var(--user-bg); color: var(--text-user); }
    .ai   { align-self: flex-start; background: var(--ai-bg); color: var(--text-ai); }

    .avatar {
      width: 36px; height: 36px; border-radius: 50%;
      display: flex; align-items: center; justify-content: center;
      font-size: 1rem; flex-shrink: 0;
      background: rgba(255,255,255,0.2);
    }
    .user .avatar { background: rgba(255,255,255,0.3); }
    .ai .avatar   { background: var(--green); color: white; }

    .content { flex: 1; }
    .time {
      font-size: 0.7rem;
      opacity: 0.7;
      margin-top: 0.3rem;
      text-align: right;
    }
    .user .time { text-align: right; }
    .ai .time   { text-align: left; }

    /* Typing Indicator */
    .typing {
      font-style: italic;
      opacity: 0.7;
      display: flex;
      align-items: center;
      gap: 0.4rem;
    }
    .typing span {
      width: 7px; height: 7px; border-radius: 50%;
      background: currentColor;
      display: inline-block;
      animation: bounce 1.4s infinite;
    }
    .typing span:nth-child(2) { animation-delay: 0.2s; }
    .typing span:nth-child(3) { animation-delay: 0.4s; }

    /* Input Area */
    #input-area {
      padding: 1rem;
      background: var(--input-bg);
      backdrop-filter: blur(12px);
      border-top: 1px solid var(--border);
      display: flex;
      gap: 0.8rem;
      align-items: center;
      box-shadow: var(--shadow);
    }
    #input {
      flex: 1;
      border: none;
      background: rgba(255,255,255,0.3);
      padding: 0.9rem 1.2rem;
      border-radius: 50px;
      font-size: 1rem;
      outline: none;
      transition: all 0.2s;
      backdrop-filter: blur(8px);
    }
    #input:focus {
      background: rgba(255,255,255,0.5);
      box-shadow: 0 0 0 3px rgba(46, 125, 50, 0.3);
    }
    #send {
      background: var(--green);
      color: white;
      border: none;
      width: 48px; height: 48px;
      border-radius: 50%;
      font-size: 1.2rem;
      cursor: pointer;
      transition: 0.2s;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    #send:hover { transform: scale(1.08); }
    #send:disabled { opacity: 0.5; cursor: not-allowed; transform: none; }

    /* Fixed Animations - using @@ instead of */
    @@keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to   { opacity: 1; transform: translateY(0); }
    }
    @@keyframes bounce {
      0%, 80%, 100% { transform: scale(0); }
      40% { transform: scale(1); }
    }

    /* Fixed Media Query */
    @@media (max-width: 480px) {
      .msg { max-width: 88%; }
      header { font-size: 1rem; padding: 0.8rem; }
      #input-area { padding: 0.8rem; }
    }
  </style>
</head>
<body>
  <header>
    <span>🌱 GreenSwitch AI Assistant</span>
    <button class="theme-toggle" onclick="toggleTheme()" title="Toggle Dark Mode">
      <i class="fas fa-moon"></i>
    </button>
  </header>

  <div id="chat"></div>

  <div id="input-area">
    <input id="input" type="text" placeholder="Ask about sustainable suppliers in Mauritius..." autocomplete="off"/>
    <button id="send" title="Send"><i class="fas fa-paper-plane"></i></button>
  </div>

  <script>
    const chat = document.getElementById('chat');
    const input = document.getElementById('input');
    const send = document.getElementById('send');

    function formatTime() {
      const d = new Date();
      return d.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
    }

    function addMessage(sender, text) {
      const msg = document.createElement('div');
      msg.className = `msg ${sender}`;

      const avatar = document.createElement('div');
      avatar.className = 'avatar';
      avatar.innerHTML = sender === 'user' 
        ? '<i class="fas fa-user"></i>' 
        : '<i class="fas fa-brain" style="color: #ffffff;"></i>';

      const content = document.createElement('div');
      content.className = 'content';
      content.textContent = text;

      const time = document.createElement('div');
      time.className = 'time';
      time.textContent = formatTime();

      msg.appendChild(avatar);
      msg.appendChild(content);

      if (sender === 'user') {
        msg.appendChild(time);
      } else {
        const wrapper = document.createElement('div');
        wrapper.appendChild(content);
        wrapper.appendChild(time);
        msg.appendChild(wrapper);
      }

      chat.appendChild(msg);
      chat.scrollTop = chat.scrollHeight;
      return msg;
    }

    function showTyping() {
      const typing = addMessage('ai', '');
      typing.innerHTML = `
        <div class="avatar"><i class="fas fa-brain" style="color: #ffffff;"></i></div>
        <div class="content">
          <div class="typing">
            <span></span><span></span><span></span>
          </div>
        </div>
      `;
      return typing;
    }

    async function getAIResponse(userMsg) {
        try {
            const response = await fetch('/api/ai/chat', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    message: userMsg
                })
            });

            if (!response.ok) {
                throw new Error('Network response was not ok');
            }

            const data = await response.json();
            
            if (data.success) {
                return data.response;
            } else {
                return "I apologize, but I'm having trouble responding right now. Please try again.";
            }
        } catch (error) {
            console.error('AI API error:', error);
            return "I'm currently unavailable. Please check your connection and try again.";
        }
    }

    async function sendMessage() {
      const txt = input.value.trim();
      if (!txt) return;
      input.value = '';
      addMessage('user', txt);

      const typing = showTyping();
      send.disabled = true;

      try {
        const reply = await getAIResponse(txt);
        typing.remove();
        addMessage('ai', reply);
      } catch (e) {
        typing.remove();
        addMessage('ai', 'Error: ' + e.message);
      } finally {
        send.disabled = false;
        input.focus();
      }
    }

    send.onclick = sendMessage;
    input.addEventListener('keydown', e => { if (e.key === 'Enter') sendMessage(); });
    input.focus();

    function toggleTheme() {
      const isDark = document.body.getAttribute('data-theme') === 'dark';
      document.body.setAttribute('data-theme', isDark ? '' : 'dark');
      const icon = document.querySelector('.theme-toggle i');
      icon.className = isDark ? 'fas fa-moon' : 'fas fa-sun';
      localStorage.setItem('theme', isDark ? 'light' : 'dark');
    }

    // Always start in LIGHT mode
    document.body.removeAttribute('data-theme');
    localStorage.setItem('theme', 'light');
    document.querySelector('.theme-toggle i').className = 'fas fa-moon';

    window.toggleTheme = toggleTheme;
  </script>
</body>
</html>